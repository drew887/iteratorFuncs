{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "node16",
    "target": "es2016", // set to the *lowest* target you support
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": false,
    "declarationMap": false
  },
  "include": ["src/**/*.ts", "test/**/*.test.ts"]
}
